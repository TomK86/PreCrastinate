<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight" >

    <TextView
        android:id="@+id/color_field"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:padding="3dp"
        android:clickable="false"
        android:longClickable="false"
        android:textSize="17sp"
        android:text="  " />
    
     <TextView
         android:id="@+id/task_field"
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
         android:layout_alignBottom="@+id/checkbox"
         android:layout_alignTop="@+id/color_field"
         android:layout_margin="5dp"
         android:layout_toLeftOf="@+id/checkbox"
         android:layout_toRightOf="@+id/color_field"
         android:text="Task: no_data"
         android:textSize="12sp"
         android:textStyle="bold" />

    <TextView
        android:id="@+id/duedate_field"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignLeft="@+id/task_field"
        android:layout_below="@+id/task_field"
        android:layout_toLeftOf="@+id/checkbox"
        android:text="Due: no_data"
        android:textSize="10sp" />

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:onClick="onCheckboxClicked"
        android:padding="3dp" />

</RelativeLayout>